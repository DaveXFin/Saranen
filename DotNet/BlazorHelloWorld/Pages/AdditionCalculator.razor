
@page "/calculator"

<PageTitle>Calculator</PageTitle>
<h3>Addition calculator</h3>

<p><input type="number" @bind="firstNumber" placeholder="First number"></p>
<p><input type="number" @bind="secondNumber"placeholder="Second number"></p>

<button @onclick="Calculate" type="button" class="btn btn-primary">Calculate</button>

<h4 class = "mt-3">Result: @calculationResult</h4>

@code {
    private string calculationResult ="0";
 
    private string firstNumber = "";
    private string secondNumber = "";



    private void Calculate()
    {

        int result = int.Parse(firstNumber) + int.Parse(firstNumber);

        calculationResult = result.ToString();

    }
}